@model Vanrise_Internship.Models.User

@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/register_and_login.css"> <!-- Ensure the same stylesheet is used -->
</head>
<body class="bg-light" style="background-color: #f8f9fa;">
    <div class="container d-flex justify-content-center">
        <div class="register-container">
            <h2>Login</h2>

            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Username)
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Enter Username" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter Password" })
                </div>
                <p>Don't have an account? <a href="@Url.Action("Register", "Home")">Register here</a></p>

                <button type="submit" class="btn btn-primary">Login</button>

                @* Check if there is an error message in ViewBag and trigger a JavaScript alert *@
                if (ViewBag.ErrorMessage != null)
                {
                    <script type="text/javascript">
                        alert('@ViewBag.ErrorMessage');
                    </script>
                }
            }
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
